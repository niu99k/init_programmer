<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gg.dao.IAccountDao">
    <resultMap id="accountAsscociatedWithUser" type="account">
        <id property="id" column="aid"></id>
        <result property="money" column="money"></result>
        <result property="uid" column="uid"></result>
        <association property="user" column="uid" javaType="user">
            <id property="id" column="id"></id>
            <result property="username" column="username"></result>
            <result property="address" column="address"></result>
            <result property="sex" column="sex"></result>
            <result property="birthday" column="birthday"></result>
        </association>
    </resultMap>
    <resultMap id="accountAsscociatedWithUserLazy" type="account">
        <id property="id" column="aid"></id>
        <result property="money" column="money"></result>
        <result property="uid" column="uid"></result>
        <association property="user" column="uid" javaType="user" select="com.gg.dao.IUserDao.selectOneUserById">
            <id property="id" column="id"></id>
            <result property="username" column="username"></result>
            <result property="address" column="address"></result>
            <result property="sex" column="sex"></result>
            <result property="birthday" column="birthday"></result>
        </association>
    </resultMap>

    <!--    查询所有Account-->
    <select id="findAll" resultType="account">
        select id,uid,money from account;
    </select>

<!--    联表查询account,user 一对一-->
    <select id="finedAllAssociatedWithUser" resultMap="accountAsscociatedWithUser">
        select a.id,a.uid,a.money,u.username,u.address from account a,user u where u.id=a.uid;
    </select>
    <!--联表查询account,user 一对一-->
    <select id="finedAllAssociatedWithUserLazy" resultMap="accountAsscociatedWithUserLazy">
        select a.id,a.uid,a.money from account a;
    </select>
<!--    根据id查询account-->
    <select id="findAccountById" resultType="account">
        select id,uid,money from account where uid=#{wwggwwg}
    </select>
</mapper>